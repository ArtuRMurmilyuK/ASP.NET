@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Калькулятор</h1>
	<form method="post" action="~/Home/Operations">
		<label>Первое число:</label><br/>
		<input type="number" name="numberA"/><br/><br/>
		<select name="act">
			<option>+</option>
			<option>-</option>
			<option>*</option>
			<option>/</option>
		</select><br/>
		<label>Второе число:</label><br/>
		<input type="number" name="numberB"/><br/><br/>
		<input type="submit" value="Посчитать"/>
	</form>
</div>
